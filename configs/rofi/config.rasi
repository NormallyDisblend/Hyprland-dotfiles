* {
    font: "Fira Sans 12";
    g-spacing: 6px;
    g-margin: 0;
    b-color: #2E344099; /* Nord: Polar Night, semi-transparent */
    fg-color: #D8DEE9FF; /* Nord: Snow Storm, text */
    fgp-color: #5E81ACFF; /* Darker cyan-ish (Nord: Frost, adjusted), placeholder */
    b-radius: 8px; /* Rounded corners */
    g-padding: 4px;
    hl-color: #4C566AFF; /* Nord: Polar Night, darker for selected background */
    hlt-color: #ECEFF4FF; /* Nord: Snow Storm, selected text */
    alt-color: #3B4252FF; /* Nord: Polar Night, solid darker alternate rows */
    wbg-color: #2E344033; /* Nord: Polar Night, very transparent window */
    w-border: 1px solid;
    w-border-color: #5E81ACFF; /* Darker cyan-ish (Nord: Frost, adjusted), border */
    w-padding: 8px;
}

configuration {
    modi: "drun";
    show-icons: true;
    display-drun: "ï€‚";
}

listview {
    columns: 1;
    lines: 8; /* Taller with more lines */
    fixed-height: true;
    fixed-columns: true;
    cycle: false;
    scrollbar: false;
    border: 0px solid;
}

window {
    transparency: "real";
    width: 500px; /* Skinnier window */
    border-radius: @b-radius;
    background-color: @wbg-color;
    border: @w-border;
    border-color: @w-border-color;
    padding: @w-padding;
}

prompt {
    text-color: @w-border-color; /* Matches icon color to border (darker cyan-ish) */
}

inputbar {
    children: ["prompt", "entry"];
    spacing: @g-spacing;
}

entry {
    placeholder: "Search Apps";
    text-color: @fg-color; /* Snow Storm */
    placeholder-color: @fgp-color; /* Darker cyan-ish */
}

mainbox {
    spacing: @g-spacing;
    margin: @g-margin;
    padding: @g-padding;
    children: ["inputbar", "listview", "message"];
}

element {
    spacing: @g-spacing;
    margin: @g-margin;
    padding: @g-padding;
    border: 0px solid;
    border-radius: @b-radius;
    border-color: @b-color;
    background-color: #2E3440FF; /* Nord: Polar Night, solid darker background */
    text-color: @fg-color; /* Snow Storm */
}

element normal.normal {
    background-color: #2E3440FF; /* Nord: Polar Night, solid darker background */
    text-color: @fg-color; /* Snow Storm */
}

element alternate.normal {
    background-color: @alt-color; /* Polar Night, solid darker alternate rows */
    text-color: @fg-color; /* Snow Storm */
}

element selected.active {
    background-color: @hl-color; /* Polar Night, darker selection */
    text-color: @hlt-color; /* Snow Storm */
}

element selected.normal {
    background-color: @hl-color; /* Polar Night, darker selection */
    text-color: @hlt-color; /* Snow Storm */
}

message {
    background-color: #BF616A99; /* Nord: Aurora Red, semi-transparent */
    border: 0px solid;
}